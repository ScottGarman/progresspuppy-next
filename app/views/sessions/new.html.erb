<h1>Log in</h1>

<%= render 'layouts/flash_alerts_static' %>

<div class="container">
  <div class="col-md-6 col-md-offset-3 mx-auto">
    <%= form_with url: login_path, local: true do |f| %>
      <%= f.label :email_address, "Email Address:" %>
      <%= f.email_field :email_address, placeholder: "Email", class: "form-control" %>

      <%= f.label :password, "Password:" %>
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>

      <%= f.check_box :remember_me, checked: true, class: "remember-me-checkbox" %>Remember my login

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <small>Help: <%= link_to "reset your password", passwords_reset_path() %></small>
  </div>
</div>
